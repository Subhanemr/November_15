@model List<Size>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sizes table</h4>
            <a asp-controller="Size" asp-action="Create" class="btn btn-warning fw-bold fs-6 text-white">Create Size</a>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Size size in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    @size.Name
                                </td>
                                <td>
                                    @size.ProductSizes.Count
                                </td>
                                <td>
                                    <a class="btn btn-primary btn-info">
                                        <i class="mdi mdi-pencil"></i>
                                    </a>
                                    <a class="btn btn-danger btn-info">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                    <a class="btn btn-primary">
                                        <i class="mdi mdi-open-in-new"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>