@model List<Color>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Colors table</h4>
            <a asp-controller="Color" asp-action="Create" class="btn btn-warning fw-bold fs-6 text-white">Create Color</a>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Color color in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    @color.Name
                                </td>
                                <td>
                                    @color.ProductColors.Count
                                </td>
                                <td>
                                    <a asp-action="Update" asp-controller="Color" asp-route-id="@color.Id" class="btn btn-primary btn-info">
                                        <i class="mdi mdi-pencil text-white"></i>
                                    </a>
                                    @if (User.IsInRole(UserRole.Admin.ToString()))
                                    {
                                        <a asp-action="Delete" asp-controller="Color" asp-route-id="@color.Id" class="btn btn-danger btn-info">
                                            <i class="mdi mdi-delete text-white"></i>
                                        </a>
                                    }
                                    <a asp-action="More" asp-controller="Color" asp-route-id="@color.Id" class="btn btn-primary">
                                        <i class="mdi mdi-open-in-new text-white"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>