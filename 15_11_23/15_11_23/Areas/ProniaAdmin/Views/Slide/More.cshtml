@model Slide
<div class="container">
    <div class="card mb-3" style="max-width: 99%;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="~/assets/images/website-images//@Model.ImgUrl" class="img-fluid rounded-start" alt="@Model.Title">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">Title: @Model.Title</h5>
                    <p class="card-text">Sub-Title: @Model.SubTitle</p>
                    <p class="card-text">Description: @Model.Description</p>
                </div>
            </div>
        </div>
    </div>
</div>
<a class="btn btn-light fw-bold fs-4" asp-action="Index" asp-controller="Slide">Back</a>
