@model UpdateBlogVM

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Blog</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title">Title Name</label>
                    <input asp-for="Title" class="form-control" placeholder="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ByWho">Name</label>
                    <input asp-for="ByWho" class="form-control" placeholder="ByWho">
                    <span asp-validation-for="ByWho" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description Name</label>
                    <input asp-for="Description" class="form-control" placeholder="Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <img src="~/assets/images/website-images//@Model.ImgUrl" width="25%" />
                    <input asp-for="ImgUrl" type="hidden" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Photo">Image</label>
                    <input asp-for="Photo" class="form-control" placeholder="Photo">
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a asp-action="Index" asp-controller="Blog" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>
